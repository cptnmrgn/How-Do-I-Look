<h1>All users</h1>

    
      <!-- <h3>Name</h3>
      <h3>Picture</h3>
      <h3>Blurb</h3>
      <h3>Location</h3> -->
   

  
    

        <% @users.each do |user| %>

          <!-- <a href="/users/<%= user.id %>"> -->
          <div id="user">
          
            
            <p class='thumbnail'><%= image_tag user.picture, width: '250' %></p>
              <div class="user-specs">
                <h2><%= user.name %></h2>
                <p><strong>tagline:</strong><br>"<%= user.blurb %>"</p>
                <p><strong>Located in:</strong><br><%= user.location %></p>
              </div>
            
              <div class="options-nav">
                <%= link_to 'Show', user, :class => "options" %> 
                <%= link_to 'Edit', edit_user_path(user), :class => "options" if user_signed_in? && (current_user.id == user.id)  %>
                <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "options"if user_signed_in? && current_user.id == user.id  %>
              </div>

            </div><!-- </a> -->

          
        <% end %>

    
  


